{
  "tabWidth": 2,
  "useTabs": false,
  "singleQuote": true,
  "editor.formatOnSave": true,
  "proseWrap": "preserve",
  "requireConfig": true,
  "trailingComma": "none",
  "bracketSpacing": true,
  "bracketSameLine": true,
  "singleAttributePerLine": true,
  "plugins": ["prettier-plugin-svelte"],
  "overrides": [{ "files": "*.svelte", "options": { "parser": "svelte" } }]
}
